<div >
    <h3>Add Monsters to upcoming Encounter!</h3>
    <ul>
        {{#each monsters}}
        <div class="form-check p-3">
            <input
                class="form-check-input appearance-none h-4 w-4 border border-gray-300 rounded-sm bg-white checked:bg-blue-600 checked:border-blue-600 focus:outline-none transition duration-200 mt-1 align-top bg-no-repeat bg-center bg-contain float-left mr-2 cursor-pointer"
                type="checkbox" name="character" id="add{{name}}">
            <label class="form-check-label inline-block text-gray-400" for="flexCheckDefault">
                <img class="flex-initial m-1 p-1 h-48" src="/images/monsters/{{name}}.jpg"
                    alt="Voidwarden Character">
                {{Name}}
            </label>

        <input type="number" name="monster" id="num{{name}}">
        <label>{{name}}</label></br>
        {{/each}}
    </ul>
</div>