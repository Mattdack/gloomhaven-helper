<aside>
  <div class="card-header col-md-12 text-center">
    <h3>
      Turn Order
    </h3>
  </div>
<ul id="sortable1" class="connectedSortable">
    {{#each players as |player|}}
      <li class="ui-state-default" id={{playerName}}> {{playerName}} 
        <input type="number" name="turnorder" min="1" max="100" />
      </li>
    {{else}}
      <p class="empty">No Players Added</p>
    {{/each}}
<ul id="sortable1" class="connectedSortable"></ul>
    {{#each monsters as |monster|}}
      <li class="ui-state-default monsterturn"> {{name}} 
      <input type="number" id={{name}} name="turnorder" min="1" max="100" />
      </li>
    {{else}}
      <p class="empty">No Monsters Added</p>
    {{/each}}
  </form>
  <button class="delBtn" id="delInput">Next Round</button>
</aside>