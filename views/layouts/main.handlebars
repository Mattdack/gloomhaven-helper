<body>
    {{!-- <div
        class="bg-[url('https://raw.githubusercontent.com/any2cards/gloomhaven/master/images/map-tiles/gloomhaven/gh-d1a.png')]">
        --}}
        <nav class="flex-column items-center flex bg-gray-800 bg-opacity-90 px-12 py-4 mx-100 shadow-2xl w-12/12">
            <div class="text-2xl text-brown font-semibold inline-flex items-center">
                <img src="https://gloomhaven-storyline.com/img/gloomhaven-logo.webp" class="w-25 mr-7"
                    alt="logo-img"><span>helper</span>
            </div>
            <div>
                <ul class="flex text-brown">
                    {{#if logged_in}}
                    <a class="ml-5 px-2 py-1" href="/dashboard">Home</a></li>
                    <a class="ml-5 px-2 py-1" href="/encounter">New Game</a></li>
                    <a class="ml-5 px-2 py-1" href="/currentEncounter">Load Game</a></li>
                    <button class="ml-5 px-3 py-1 rounded font-semibold bg-gray-100 text-gray-800" id='logoutBtn'
                        href="/login">Logout</button></li>
                    {{else}}
                    <a class="ml-5 px-3 py-1 rounded font-semibold bg-gray-100 text-gray-800" href="/login">Login</a>
                    </li>
                    <a class="ml-5 px-3 py-1 rounded font-semibold bg-gray-100 text-gray-800" href="/signup">Sign Up</a>
                    </li>
                    {{/if}}
                </ul>
            </div>
        </nav>
    </div>
    <main>
        {{{body}}}
    </main>
    <footer class="bg-gray-800 text-center lg:text-left bg-opacity-90">
        <div class="text-brown-700 text-center p-4" style="background-color: rgba(0, 0, 0, 0.2);">
            &copy;Gloomhaven Helper
        </div>
    </footer>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>
    <script>
        $(function () {
            $("#sortable1, #sortable2").sortable({
                connectWith: ".connectedSortable"
            }).disableSelection();
        });
    </script>
