<body
    class="bg-[url(https://www.backerkit.com/blog/wp-content/uploads/2017/10/gloomhaven-isaac-childres-1.jpg)] md:bg-cover">
    <main class="flex grid grid-cols-1 p-8 justify-items-center">
        <div class="flex-row">
            <div class="m-2 p-2">
                <div class="justify-center login-card bg-gray-800 bg-opacity-90">
                    <h2 class="flex justify-center card-header">Sign Up</h2>
                    <form class="flex justify-center card-body login-form" id="signup">
                        <input type="text" name="signUpUser" id="signUpUser" placeholder="username">
                        <input type="text" name="signUpPassword" id="signUpPassword" placeholder="password">

                        <button class="ml-5 px-3 py-1 rounded font-semibold bg-gray-100 text-gray-800">Make
                            Account!</button>
                    </form>
                    <br>
                    <div class="flex space-x-2 justify-center">
                        <a class="inline-block px-6 py-2.5 bg-blue-600 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-blue-700 hover:shadow-lg focus:bg-blue-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-blue-800 active:shadow-lg transition duration-150 ease-in-out ml-5 px-3 py-1 rounded font-semibold bg-gray-100 text-gray-800"
                            href="/login">Back to Login</a>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <script src="/js/signup.js"></script>