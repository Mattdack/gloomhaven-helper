<div class="flex flex-row w-fit border-2 mb-4 shadow-[0_0px_10px_5px_rgba(210,70,33,0.3)] transition ease-in-out delay-150 hover:scale-105 duration-300 place-items-center text-lg">
  <img class="flex-initial m-1 p-1 h-48" src="/images/characters/{{playerName}}.jpg" alt="">
  <div class="m-1 p-1 w-full">
    <div class="-space-y-.5">
      <p class="font-bold underline underline-offset-4">{{playerName}}</p>
      <p class="font-semibold">level: <span class="font-light">{{playerLevel}}</span></p>
      <p class="font-semibold">health: <span class="font-light">{{playerHealth}}</span> | <span class="HPchange font-light">{{playerHealth}} </span>
      <button type="button" class="plusHP font-sans bg-green-400 rounded-l-lg w-4">+</button>
      <button type="button" class="minusHP -ml-2 font-sans bg-red-400 rounded-r-lg w-4">-</button>
      <p class="font-semibold">experience: <span class="font-light"><span class="XPchange">0</span>
      <button type="button" class="plusXP font-sans bg-blue-400 rounded-l-lg w-4">+</button>
      <button type="button" class="minusXP -ml-2 font-sans bg-yellow-400 rounded-r-lg w-4">-</button></p>
      <p class="font-semibold">effect(s): <span class="font-light">{{effect}}</span></p>
      {{#each Effects}}
      <p>{{name}}</p>
      {{/each}}
            <button
          id="dropdownDefault-{{id}}"
          data-dropdown-toggle="dropdown-{{id}}"
          class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2.5 text-center inline-flex items-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
          type="button"
        >Add Effect
          <svg
            class="ml-2 w-4 h-4"
            aria-hidden="true"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg"
          ><path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M19 9l-7 7-7-7"
            ></path></svg>
            </button>
        <div
          id="dropdown-{{id}}"
          class="hidden z-10 w-44 bg-white rounded divide-y divide-gray-100 shadow dark:bg-gray-700"
          data-popper-reference-hidden=""
          data-popper-escaped=""
          data-popper-placement="bottom"
          style="position: absolute; inset: 0px auto auto 0px; margin: 0px; transform: translate3d(0px, 11px, 0px);"
        >
          <ul
            class="py-1 text-sm text-gray-700 dark:text-gray-200 addPlayerEffect"
            aria-labelledby="dropdownDefault"
          >
            <li>
              <a
                href="#" data-effect="1" data-player={{id}}
                class="block py-2 px-4 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white"
              >Muddle</a>
            </li>
            <li>
              <a
                href="#" data-effect="2" data-player={{id}}
                class="block py-2 px-4 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white"
              >Immobolize</a>
            </li>
            <li>
              <a
                href="#" data-effect="3" data-player={{id}}
                class="block py-2 px-4 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white"
              >Stun</a>
            </li>
            <li>
              <a
                href="#" data-effect="4" data-player={{id}}
                class="block py-2 px-4 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white"
              >Strengthen</a>
            </li>
            <li>
              <a
                href="#" data-effect="5" data-player={{id}}
                class="block py-2 px-4 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white"
              >Disarm</a>
            </li>
            <li>
              <a
                href="#" data-effect="6" data-player={{id}}
                class="block py-2 px-4 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white"
              >Poison</a>
            </li>
            <li>
              <a
                href="#" data-effect="7" data-player={{id}}
                class="block py-2 px-4 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white"
              >Wound</a>
            </li>
            <li>
              <a
                href="#" data-effect="8" data-player={{id}}
                class="block py-2 px-4 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white"
              >Shield</a>
            </li>
          </ul>
        </div>
    </div>
  </div>
</div>